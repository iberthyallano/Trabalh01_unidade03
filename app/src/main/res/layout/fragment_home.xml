<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Home.HomeFragment">


        <Button
            android:id="@+id/buttonAcelerometro"
            android:layout_width="194dp"
            android:layout_height="57dp"
            android:text="Acelerometro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.277" />

        <Button
            android:id="@+id/buttonLuz"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="Luz"
            app:layout_constraintEnd_toEndOf="@+id/buttonAcelerometro"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/buttonAcelerometro"
            app:layout_constraintTop_toBottomOf="@+id/buttonAcelerometro" />

        <Button
            android:id="@+id/buttonProximidade"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="Proximidade"
            app:layout_constraintEnd_toEndOf="@+id/buttonLuz"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/buttonLuz"
            app:layout_constraintTop_toBottomOf="@+id/buttonLuz" />

        <Button
            android:id="@+id/buttonGiroscopio"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="Giroscopio"
            app:layout_constraintEnd_toEndOf="@+id/buttonProximidade"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/buttonProximidade"
            app:layout_constraintTop_toBottomOf="@+id/buttonProximidade" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>